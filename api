    local action="$1"
    local app="$2"
    
    [ -z "$action" ] && error "terminal_manage(): Must specify an action: either 'install' or 'uninstall' or 'update' or 'refresh'"
    
    "$GO_API_BIN" $GO_API_ARGS terminal_manage "$action" "$app"
    return $?
}

